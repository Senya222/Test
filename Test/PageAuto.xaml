<Page x:Class="Test.PageAuto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuto" Width="Auto" Height="Auto">

    <Grid  Grid.Row="1" Background="#EEDCFC">
        <StackPanel Height="250" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{DynamicResource AuthText}" HorizontalAlignment="Center" Text="Авторизация"/>
            <TextBlock Style="{DynamicResource AuthText}" HorizontalAlignment="Left" Text="Введите логин:"/>
            <TextBox Style="{DynamicResource AuthText}" x:Name="LogB"/>
            <TextBlock Style="{DynamicResource AuthText}" HorizontalAlignment="Left" Text="Введите пароль:"/>
            <PasswordBox Style="{DynamicResource AuthText}" x:Name="PassB"/>
            <Button x:Name="btnEnter" Content="Войти" Click="btnEnter_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
